<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_success_msg"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="@string/distance"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:maxLines="1"
        android:textColor="@color/themeBlack"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_success_time"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="12sp"
        android:padding="10dp"
        android:text="@string/driver_certification"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/gray_line"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_success_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/distance"
        android:textSize="14sp"
        android:maxLines="2"
        android:textColor="@color/themeBlack"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="match_parent"
        android:background="@color/my_item_line"
        android:layout_height="15dp"/>
</LinearLayout>